    "@tanstack/react-query": "^5.90.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql": "^16.11.0",
    "graphql-request": "^7.3.1",
    "isbot": "^5.1.31",
    "lucide-react": "^0.546.0",
    "nuqs": "^2.7.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.4",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.15.0",
    "@antfu/eslint-config": "^6.0.0",
